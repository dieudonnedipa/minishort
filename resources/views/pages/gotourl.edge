<!DOCTYPE html>
<html>
<head>
  <title>MiniShort - Gestion des URLs</title>
  <style>
    body { display: flex; font-family: Arial; margin: 0; }
    .sidebar { width: 300px; background: #f4f4f4; padding: 20px; border-right: 1px solid #ddd; height: 100vh; overflow-y: auto; }
    .content { flex: 1; padding: 20px; }
    input, button { width: 100%; padding: 10px; margin: 10px 0; }
    .short-url { color: #007bff; font-weight: bold; }
    .card { margin-bottom:15px; padding:10px; background:#fff; border-radius:5px; }
    a.button { text-decoration: none; display: inline-block; background:#007bff; color:white; padding:10px 20px; border-radius:5px; margin-top:10px; }
    a.button:hover { background:#0056b3; }
  </style>
</head>
<body>
  <!-- Sidebar -->
  <div class="sidebar">
    <h2>üìå Mes URLs</h2>
    @each(url in urls)
      <div class="card">
        <p><b>Original:</b> {{ url.originalUrl }}</p>
        <p><a class="short-url" href="/{{ url.shortCode }}" target="_blank">{{ url.shortCode }}</a></p>
        <img src="{{ url.qrCode }}" alt="QR" style="max-width:100px; margin-bottom:5px;">
        
        <!-- Supprimer -->
        <form action="/urls/{{ url.id }}/delete" method="POST" style="margin-bottom:5px;">
          {{ csrfField() }}
          <button type="submit" style="background:red; color:white; border:none; padding:5px 10px;">Supprimer</button>
        </form>

        <!-- Modifier -->
        <form action="/urls/{{ url.id }}/update" method="POST">
          {{ csrfField() }}
          <input type="text" name="originalUrl" value="{{ url.originalUrl }}" placeholder="Nouvelle URL">
          <input type="text" name="shortCode" value="{{ url.shortCode }}" placeholder="Nouveau shortCode">
          <button type="submit" style="background:#007bff; color:white; border:none; padding:5px 10px;">Mettre √† jour</button>
        </form>
      </div>
    @endeach
  </div>

  <!-- Content principal -->
  <div class="content">
    <h1>üîç Rechercher / Redirection</h1>
    <form action="/goto" method="POST">
      {{ csrfField() }}
      <input type="text" name="code" placeholder="Entrez le shortCode (phrase √† encoder)" required>
      <button type="submit">Envoyer le mot-cl√©</button>
    </form>

    <!-- Bouton retour accueil -->
    <a href="/" class="button">üè† Retour √† l'accueil</a>
  </div>
</body>
</html>
